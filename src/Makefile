# comments begin with #





# for convenience, define variable $(OBJS) to list of object files

OBJS= history.o simple_ui.o tokenizer.o



# make has a "default rule" specifying how to build a an "object" file (.o) from a C source file (.c)

#            this rule includes $(CFLAGS) as one of cc's parameters

CFLAGS=-g -O3 -Wall # -g for debug, -O3 for optimization



# first target is built by default.  Usually named "all"

all: tokenizer_project



# tokenizer_project (target) depends on all object files (prerequisites)

tokenizer_project: $(OBJS)

	cc -o tokenizer_project $(CFLAGS) $(OBJS)



# all object files built from c files that include tokenizer.h

$(OBJS): tokenizer.h



# deletes files generated by compilation

clean: tokenizer_project

	rm -f *.o *~ tokenizer_project



run:tokenizer_project

	./tokenizer_project
